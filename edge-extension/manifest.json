{
  "manifest_version": 3,
  "name": "Medicine Cabinet",
  "version": "1.0.0",
  "description": "AI memory management for Capsules and Tablets - optimized for Microsoft Edge and Bing Chat",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Medicine Cabinet"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bing.com/*",
        "https://bing.com/*",
        "https://github.com/*",
        "https://stackoverflow.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://poe.com/*"
      ],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://bing.com/*",
    "https://github.com/*",
    "https://stackoverflow.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://poe.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/parser.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
